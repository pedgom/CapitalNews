@model CapitalNews.Models.Noticias

@{

    ViewData["Title"] = "Details";
}

<div class="container">
    <br />
    <br />
    <br />
    <br />
    <br />

    <h1>Detalhes</h1>

    <div>
        <h4>Noticia</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Body)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categoria.CategoriaNome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Jornalista.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fotografia)
            </dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("~/Fotos/")@Model.Fotografia.NomeFoto" height="200" alt="Imagem sobre @Model.Titulo" title="@Model.Titulo" />
            </dd>
        </dl>
    </div>

    <h4>Lista de Comentarios associados a @Model.Titulo</h4>

    @if (Model.ListaComentarios.Count == 0)
    {
        <p>Não há comentários associadas a esta notícia.</p>
    }
    else
    {
        <table class="table">
            
            @foreach (var comentario in Model.ListaComentarios)
            {
                <tr>
                    
                    <td>@comentario.TextoComentario</td>
                    <td>@comentario.DataComentario</td>
                    <td>@comentario.Leitor.Username</td>
                    
                    <td></td>
                </tr>
            }
        </table>
    }

    <a class="nav-link text-dark" asp-area="" asp-controller="Comentarios" asp-action="Create">Adicionar Comentario</a>
    <div>

        <a asp-action="Index">Voltar à lista</a>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
</div>