<div class="container">
<h1>Detalhes da Foto</h1>

<div>
    <h4>Fotografias</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeFoto)
        </dt>
        <dd class = "col-sm-10">
             <img src="~/Fotos/@Model.NomeFoto" height="200" alt="imagem da Noticia @Model.Descritores" title="@Model.Descritores" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descritores)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descritores)
        </dd>
    </dl>
</div>
<div>
