@model CapitalNews.Models.Fotografias

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Fotografias</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FotoNoticia" />
            <div class="form-group">
                <label asp-for="NomeFoto" class="control-label"></label>
                <input asp-for="NomeFoto" class="form-control" />
                <span asp-validation-for="NomeFoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoNoticia" class="control-label"></label>
                <input type="file" name="´fotos" class="form-control" accept=".jpg,.png" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
