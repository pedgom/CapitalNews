@model IEnumerable<CapitalNews.Models.Jornalistas>

@{
    ViewData["Title"] = "Index";
}

<br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
<div class="container">
<h1>Lista dos Jornalistas</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Adicionar Jornalista</a>
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fotojor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
             <td>
                    <a href="~/Fotos/@item.Fotojor" target="_blank">
                        <img src="~/Fotos/@Html.DisplayFor(modelItem => item.Fotojor)"
                         alt="Foto do(a) jornalista @item.Nome"
                         title="@item.Nome"
                         height="50" />
                    </a>
                </td>
            <td>
                 @if (User.Identity.IsAuthenticated) {
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                 }
            </td>
        </tr>
}
    </tbody>
</table>

</div>
