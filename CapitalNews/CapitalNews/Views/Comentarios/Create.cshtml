@model CapitalNews.Models.Comentarios

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <br />
    <br />
    <br />
    <br />
    <br />
    <h1>Criar</h1>
    <h4>Comentarios</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" autocomplete="on">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TextoComentario" class="control-label"></label>
                    <textarea asp-for="TextoComentario" class="form-control" rows="5" cols="50"></textarea>
                    <span asp-validation-for="TextoComentario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NoticiaFK" class="control-label"></label>
                    <select asp-for="NoticiaFK" class ="form-control" asp-items="ViewBag.NoticiaFK"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Adicionar Comentario" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
