@model IEnumerable<CapitalNews.Models.Comentarios>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TextoComentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataComentario)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Noticia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leitor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TextoComentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataComentario)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Noticia.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leitor.Username)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
