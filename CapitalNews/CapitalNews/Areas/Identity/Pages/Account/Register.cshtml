@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h2>Criar uma nova conta.</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">

            <hr />

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>

        </div>
        <div class="col-md-4">
            <hr />
            @* dados do novo Leitor *@

            <div class="form-floating">
                <input asp-for="Input.Leitores.Nome" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Leitores.Nome"></label>
                <span asp-validation-for="Input.Leitores.Nome" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Leitores.Datanasc" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Leitores.Datanasc"></label>
                <span asp-validation-for="Input.Leitores.Datanasc" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Leitores.Sexo" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Leitores.Sexo"></label>
                <span asp-validation-for="Input.Leitores.Sexo" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Leitores.Username" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Leitores.Username"></label>
                <span asp-validation-for="Input.Leitores.Username" class="text-danger"></span>
            </div>

        </div>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}